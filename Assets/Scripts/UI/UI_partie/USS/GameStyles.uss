/* ----- Root Container ----- */
.root-container {
    width: 100%;
    height: 100%;
    flex-direction: column;
}

/* ----- Bandeau supérieur ----- */
.top-banner {
    width: 100%;
    height: 120px;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background-color: rgba(45, 55, 72, 0.95);
    border-bottom-width: 2px;
    border-bottom-color: rgba(74, 85, 104, 1);
    padding: 15px 25px;
}

.banner-section {
    flex-direction: column;
    justify-content: flex-start;
}

/* ----- Section gauche ----- */
.left-section {
    width: 200px;
    align-items: flex-start;
}

.quit-link {
    background-color: transparent;
    border-width: 0;
    color: rgba(252, 129, 129, 1);
    font-size: 14px;
    padding: 0;
    margin: 0 0 10px 0;
    -unity-text-align: left;
    cursor: link;
}

.quit-link:hover {
    color: rgba(254, 178, 178, 1);
}

.health-container {
    flex-direction: column;
    width: 100%;
    margin-top: 8px;
}

.health-label {
    font-size: 11px;
    color: rgba(160, 174, 192, 1);
    margin-bottom: 4px;
}


.health-bar-bg {
    width: 200px;
    height: 20px;
    background-color: gray;
    border-radius: 4px;
}

.health-bar-fill {
    width: 100%;
    height: 100%;
    background-color: rgba(237, 137, 54, 1); /* orange de la barre de temps */
    border-radius: 4px;
    transition-property: width;
    transition-duration: 0.3s;
    transition-timing-function: ease-out;
}

.lamp-container {
    flex-direction: column;
    align-items: center;
    width: 220px;
}

/* .lamp-title {
    color: white;
    font-size: 16px;
    margin-bottom: 6px; /* titre plus haut que la barre */
    /* unity-text-align: middle; */
/* } */

.lamp-bar-bg {
    width: 200px;
    height: 20px;
    background-color: gray;
    position: relative;
    justify-content: center;
    align-items: center;
}

.lamp-bar-fill {
    width: 100%;
    height: 100%;
    background-color: orange;
    position: absolute;
    left: 0;
    top: 0;
}

